<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane minWidth="-Infinity" prefHeight="412.0" prefWidth="596.0" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="admin.AdminGuiHandler">
    <stylesheets>
        <URL value="@stylesCSS.css" />
    </stylesheets>
    <children>
        <GridPane alignment="CENTER" hgap="20" minWidth="-Infinity" vgap="5">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="40.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="190.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="40.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="40.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="40.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="40.0" vgrow="SOMETIMES" />
            </rowConstraints>

            <children>
                <HBox prefHeight="100.0" prefWidth="200.0" GridPane.rowIndex="0">
                    <children>
                        <GridPane alignment="CENTER" minWidth="-Infinity" prefHeight="30.0" prefWidth="600.0">
                            <columnConstraints>
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                            </rowConstraints>
                            <children>
                                <HBox minWidth="-Infinity" prefHeight="27.0" prefWidth="262.0" spacing="5.0" GridPane.columnIndex="1" GridPane.rowIndex="0">
                                    <children>
                                        <Label alignment="TOP_LEFT" maxWidth="-Infinity" minWidth="-Infinity" prefWidth="80.0" text="Send news: " textAlignment="CENTER" />
                                        <ComboBox fx:id="chooseTopicComboBox" minWidth="-Infinity" prefWidth="165.0" promptText="Choose topic" />
                                    </children>
                                    <GridPane.margin>
                                        <Insets bottom="15.0" left="15.0" right="15.0" top="40.0" />
                                    </GridPane.margin>
                                    <padding>
                                        <Insets left="10.0" right="10.0" />
                                    </padding>
                                </HBox>

                                <HBox minWidth="-Infinity" GridPane.columnIndex="0" GridPane.rowIndex="0">
                                    <children>
                                        <Label alignment="TOP_LEFT" minWidth="-Infinity" text="Current topics:">
                                            <padding>
                                                <Insets left="10.0" />
                                            </padding>
                                        </Label>
                                    </children>
                                    <GridPane.margin>
                                        <Insets bottom="15.0" right="15.0" top="40.0" />
                                    </GridPane.margin>
                                    <padding>
                                        <Insets bottom="15.0" left="25.0" right="10.0" />
                                    </padding>
                                </HBox>
                            </children>
                        </GridPane>
                    </children>
                </HBox>







                <HBox maxHeight="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="200.0" prefWidth="263.0" spacing="10.0" GridPane.rowIndex="1">
                    <children>
                        <GridPane alignment="CENTER" minWidth="-Infinity" prefWidth="600.0">
                            <columnConstraints>
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                            </rowConstraints>
                            <children>
                                <HBox minWidth="-Infinity" GridPane.columnIndex="1" GridPane.rowIndex="0">
                                    <children>
                                        <TextArea fx:id="newsArea" wrapText="true" minHeight="150.0" minWidth="200.0" prefHeight="150.0" prefWidth="200.0" HBox.hgrow="ALWAYS">
                                            <HBox.margin>
                                                <Insets />
                                            </HBox.margin>
                                        </TextArea>
                                    </children>
                                    <padding>
                                        <Insets left="10.0" right="10.0" />
                                    </padding>
                                    <GridPane.margin>
                                        <Insets bottom="15.0" left="15.0" right="15.0" top="5.0" />
                                    </GridPane.margin>
                                </HBox>








                                <HBox minWidth="-Infinity" spacing="30.0" GridPane.columnIndex="0" GridPane.rowIndex="0">
                                    <GridPane.margin>
                                        <Insets bottom="15.0" left="25.0" right="15.0" top="5.0" />
                                    </GridPane.margin>
                                    <padding>
                                        <Insets left="10.0" right="10.0" />
                                    </padding>
                                    <children>
                                        <TextArea fx:id="topicsArea" editable="false" minHeight="150.0" minWidth="-Infinity" prefHeight="150.0" prefWidth="150.0" HBox.hgrow="ALWAYS">
                                            <HBox.margin>
                                                <Insets />
                                            </HBox.margin>
                                        </TextArea>
                                    </children>
                                </HBox>
                            </children>
                            <padding>
                                <Insets top="10.0" />
                            </padding>
                        </GridPane>
                    </children>
                </HBox>


                <HBox spacing="175.0" GridPane.rowIndex="2">
                    <children>
                        <Button fx:id="refreshBttn" minWidth="-Infinity" mnemonicParsing="false" onAction="#refreshTopics" prefWidth="150.0" text="Refresh topics list">
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                        </Button>
                        <Button fx:id="publishNewsBttn" minWidth="-Infinity" mnemonicParsing="false" onAction="#publishNews" text="Send news"/>


                    </children>
                    <padding>
                        <Insets left="30.0" right="20.0" />
                    </padding>
                    <GridPane.margin>
                        <Insets bottom="5.0" left="45.0" right="25.0" top="5.0" />
                    </GridPane.margin>
                </HBox>




                <HBox minWidth="-Infinity" spacing="30.0" GridPane.rowIndex="3">
                    <children>
                        <TextField fx:id="addTopicField" minWidth="-Infinity" prefWidth="200.0" promptText="topic name" />
                        <Button fx:id="registerTopicBttn" minWidth="-Infinity" mnemonicParsing="false" onAction="#addNewTopic" prefWidth="150.0" text="Add new topic" />
                    </children>
                    <GridPane.margin>
                        <Insets bottom="15.0" left="100.0" right="15.0" top="40.0" />
                    </GridPane.margin>
                    <padding>
                        <Insets left="10.0" right="10.0" />
                    </padding>
                </HBox>




                <HBox minWidth="-Infinity" spacing="30.0" GridPane.rowIndex="4">
                    <children>

                        <TextField fx:id="removeTopicField" minWidth="-Infinity" prefWidth="200.0" promptText="topic name" />
                        <Button fx:id="removeButton" minWidth="-Infinity" mnemonicParsing="false" onAction="#removeTopicFromList" prefWidth="150.0" text="Remove topic" />
                    </children>
                    <GridPane.margin>
                        <Insets bottom="15.0" left="100.0" right="15.0" top="40.0" />
                    </GridPane.margin>
                    <padding>
                        <Insets left="10.0" right="10.0" />
                    </padding>
                </HBox>







                <HBox minWidth="-Infinity" prefHeight="100.0" prefWidth="580.0" spacing="30.0" GridPane.rowIndex="5">
                    <children>
                        <Label minWidth="-Infinity" text="Log: " />
                        <Label fx:id="logLabel"  minWidth="-Infinity" prefWidth="470.0" />
                    </children>
                    <padding>
                        <Insets left="15.0" right="10.0" />
                    </padding>
                    <GridPane.margin>
                        <Insets bottom="15.0" left="15.0" right="15.0" top="40.0" />
                    </GridPane.margin>
                </HBox>


            </children>
        </GridPane>
    </children>
</AnchorPane>
